<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".forgot" android:id="@+id/frameLayout3">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linv3" android:layout_marginLeft="40sp"
            android:layout_marginRight="40sp" android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_height="wrap_content">
        <TextView
                android:text="Mot de passe oublié"
                android:layout_width="wrap_content"
                android:layout_height="41sp" android:id="@+id/forgot_title_textView"
                android:textSize="24sp" android:textColor="@color/titre"
                android:fontFamily="@font/gothamrounded_medium"/>
        <TextView
                android:text="@string/forgot_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/forgot_msg"
                android:fontFamily="@font/gothamrounded_light" android:textSize="12sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/phone_input3" android:hint="Numéro de téléphone"
                android:background="@drawable/custom_edittext" android:layout_marginTop="15sp" android:textSize="12sp"
                android:fontFamily="@font/gothamrounded_book"/>

        <Button
                android:text="Renouvelez votre mot de passe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/renew_password_btn"
                android:background="@drawable/custom_button"
                android:textColor="#FFFFFF" android:textStyle="bold" android:layout_marginTop="30dp"
                android:textAllCaps="false"
                android:elevation="500dp" style="@style/Widget.AppCompat.Button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>