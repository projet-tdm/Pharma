<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".forgot" android:id="@+id/frameLayout3">
    <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linv3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/verticalLayoutStyle">
        <TextView
                android:text="Mot de passe oublié"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgot_title_textView"
                style="@style/fragmentTitleStyle"/>
        <TextView
                android:text="@string/forgot_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/forgot_msg"
                style="@style/messageStyle"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_input3" android:hint="Numéro de téléphone"
                style="@style/textInputLayoutStyle">
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    style="@style/editTextStyle" android:id="@+id/phone_EditText"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
                style="@style/buttonStyle"
                android:text="Rennouvler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/renew_password_btn"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>