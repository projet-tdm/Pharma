<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:background="#ffffff"
                                                   tools:context=".detailNotif">
    <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/ntifview"
            app:cardElevation="8dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:strokeColor="@color/titre"
            app:strokeWidth="@dimen/md_action_button_corner_radius" app:cardCornerRadius="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/toolbar4">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
            />
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" android:layout_marginTop="44dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView25" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.029"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textSize="8sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView29" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView27" android:layout_marginTop="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
             />
    <Button
            style="@style/buttonStyle"
            android:text="PAYER"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button9" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ntifview"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.037"
              />
    <Button
            android:layout_width="32dp"
            android:layout_height="19dp"
            android:id="@+id/button10"
            app:layout_constraintTop_toTopOf="@+id/toolbar4" app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
            app:layout_constraintStart_toStartOf="@+id/toolbar4" android:layout_marginStart="8dp"
            android:background="@drawable/md_nav_back"/>
    <TextView
            android:text="notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30" app:layout_constraintStart_toEndOf="@+id/button10"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/toolbar4"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar4" app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar4" android:textColor="@android:color/white"
            android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>