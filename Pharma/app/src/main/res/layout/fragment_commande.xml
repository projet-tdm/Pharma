<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".CommandeFragment"

                                                   android:background="@color/colorLightGrey"
                                                   android:id="@+id/frameLayout3">
    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGrey"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2" android:visibility="visible" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="@dimen/list_space"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:id="@+id/listcmd"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/en_cours"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/cmd"
            android:layout_width="wrap_content"
            android:fontFamily="@font/gothamrounded_mediumitalic"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/titre" android:textSize="30sp" android:layout_marginStart="16dp"/>

    <TextView android:id="@+id/trait_e"
              android:fontFamily="@font/gothamrounded_lightitalic"
              android:textSize="@dimen/sizecmd"
              android:textColor="@color/lignecmd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/T"
              android:layout_marginEnd="88dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/chip4"/>

    <TextView android:id="@+id/en_cours"
              android:fontFamily="@font/gothamrounded_lightitalic"
              android:textSize="@dimen/sizecmd"
              android:textColor="@color/lignecmd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/C"
              app:layout_constraintStart_toEndOf="@+id/annul_e"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/chip" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toStartOf="@+id/trait_e"/>

    <TextView android:id="@+id/annul_e"
              android:fontFamily="@font/gothamrounded_lightitalic"
              android:textSize="@dimen/sizecmd"
              android:textColor="@color/lignecmd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/A"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="52dp"
              app:layout_constraintTop_toBottomOf="@+id/chip3"/>
    <Button
            android:layout_width="51dp"
            android:layout_height="43dp"
            android:id="@+id/add"
            android:background="@drawable/ic_add_shopping_cart_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/titre" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.825"
            android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="90dp" app:layout_constraintHorizontal_bias="0.0"/>
    <com.google.android.material.chip.Chip
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/chip" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/chip4"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/chip3"
            android:layout_marginStart="8dp" app:chipBackgroundColor="@color/cours"/>
    <com.google.android.material.chip.Chip
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/chip3" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:chipBackgroundColor="@color/annul"/>
    <com.google.android.material.chip.Chip
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:id="@+id/chip4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp" app:chipBackgroundColor="@color/traite"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2" app:layout_constraintTop_toBottomOf="@+id/en_cours"
            app:layout_constraintStart_toStartOf="@+id/listcmd" app:layout_constraintEnd_toEndOf="@+id/listcmd"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>

